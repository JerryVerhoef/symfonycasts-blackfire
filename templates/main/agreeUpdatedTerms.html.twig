{% extends 'base.html.twig' %}

{% block body %}
<div class="col">
    <h1>Our terms updated!</h1>

    <div>
        Updated terms: by using this site, you agree that
        BigFoot *might* exist.
    </div>

    {{ form_start(form, {
        attr: {
            action: path('agree_terms_update')
        }
    }) }}
        {{ form_row(form) }}

        <button type="submit">Submit</button>
    {{ form_end(form) }}
</div>
{% endblock %}